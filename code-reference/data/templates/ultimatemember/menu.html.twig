{% if isChild|default(false) == false %}
<h2 className="phpdocumentor-sidebar__root-package">
{% endif %}
    <a href="{{ path(menuItem.path) }}">{{ menuItem.label }}</a>
{% if isChild|default(false) == false %}
</h2>
{% endif %}

{% if menuItem.items is not empty %}
<ul className="phpdocumentor-list">
    {% for child in menuItem.items|default([]) %}
        <li>
            {{ include('menu.html.twig', {menuItem: child, isChild: true}, with_context = false) }}
        </li>
    {% endfor %}
</ul>
{% endif %}
