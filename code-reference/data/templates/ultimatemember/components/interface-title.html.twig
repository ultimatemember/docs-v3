<h2 className="phpdocumentor-content__title">
    {{ node.name }}
    {% if node.parent is not empty %}
        <span className="phpdocumentor-interface__extends">
            extends
            {% for interface in node.parent %}
                {{ interface|route('url') }}{% if not loop.last %}, {% endif %}
            {% endfor %}
        </span>
    {% endif %}
    {% if usesPackages %}
        <div className="phpdocumentor-element__package">
            in
            <ul className="phpdocumentor-breadcrumbs 3">
                {% for breadcrumb in packages(node) %}
                    <li><a href="{{ link(breadcrumb) }}">{{ breadcrumb.name }}</a></li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
</h2>
