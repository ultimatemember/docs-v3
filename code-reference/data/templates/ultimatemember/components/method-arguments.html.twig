{% if node.arguments|length > 0 %}
    ##### Parameters
    <dl className="phpdocumentor-argument-list">
        {% for argument in node.arguments %}
            
                <span className="phpdocumentor-signature__argument__name">`${{ argument.name }}`</span>
                : <span className="phpdocumentor-signature__argument__return-type">{{ argument.type|route('url')|join('|')|raw }}</span>
                {% if argument.default %} = <span className="phpdocumentor-signature__argument__default-value">{{ argument.default }}</span>{% endif %}
            
           
                 {{ include('components/description.html.twig', {'node': argument}) }}
           
        {% endfor %}
    </dl>
{% endif %}
